<div class='form-group'>
  <%= form_tag(search_path, method: 'get') do %>
    <div class="row">
      <div class="col-xs-8">
        <%= text_field_tag(:q, '', class: 'form-control') %>
      </div>
      <div class="col-xs-4">
        <%= submit_tag('検索', name: nil, class: 'btn btn-default') %>
      </div>
    </div>
  <% end %>
</div>
